
<%= form_for(book) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class=field>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>  
    
    <div class=field>
      <label>Body</label>
      <%= f.text_area :body %>  <br>
    </div>
    
    <div class=actions>
      <%= f.submit 'Update Book' %><br>
    </div>
<% end %>
